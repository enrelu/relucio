---
// src/components/Section.astro
interface Props {
  title: string;
  id?: string; // <-- Aceptamos la propiedad opcional id
}

const { title, id } = Astro.props;
---

<section id={id} class="flex flex-col gap-6 mt-12 scroll-mt-24">
  <h2 class="text-2xl font-medium tracking-tight text-zinc-900 dark:text-zinc-50">
    {title}
  </h2>
  <div>
    <slot />
  </div>
</section>
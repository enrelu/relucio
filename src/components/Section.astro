---
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<section class="flex flex-col gap-6">
    <h2 class="text-sm font-semibold text-zinc-900 dark:text-zinc-100 uppercase tracking-wider">
        {title}
    </h2>
    <div class="flex flex-col gap-4">
        <slot />
    </div>
</section>
---
interface Props {
	title: string;
	description: string;
	href: string;
	year: string;
}
const { title, description, href, year } = Astro.props;
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer"
  class="group flex flex-col gap-2 p-4 -mx-4 rounded-lg hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-all duration-300 border border-transparent hover:border-zinc-200 dark:hover:border-zinc-800"
>
    <div class="flex justify-between items-baseline">
        <h3 class="font-medium text-zinc-900 dark:text-zinc-100 group-hover:underline decoration-zinc-400 underline-offset-4">
            {title}
        </h3>
        <span class="text-xs text-zinc-400 font-mono">{year}</span>
    </div>
    <p class="text-sm text-zinc-500 dark:text-zinc-400 leading-relaxed">
        {description}
    </p>
</a>
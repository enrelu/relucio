---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NewsletterWidget from '../components/NewsletterWidget.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css'
import CommandPalette from '../components/CommandPalette.astro';
import SecurityHeaders from '../components/SecurityHeaders.astro';

interface Props {
	title: string;
	description?: string;
    showHeader?: boolean;
}

// 2. Le damos valor por defecto true (si no dices nada, se muestra)
const { title, description = "Enrique Relucio Portfolio", showHeader = true } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<SecurityHeaders />
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
		<title>{title}</title>
		<script is:inline>
            // Mantenemos este script aquÃ­ para que el color se aplique ANTES de pintar la web
			const theme = (() => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
			})();
			if (theme === 'dark') document.documentElement.classList.add('dark');
		</script>
	</head>
	<body class="bg-white dark:bg-zinc-950 text-zinc-600 dark:text-zinc-400 min-h-screen selection:bg-zinc-900 selection:text-white dark:selection:bg-white dark:selection:text-zinc-900">
		<ThemeToggle />
		<NewsletterWidget />
        <CommandPalette />
		<main class="max-w-2xl mx-auto px-6 pt-12 pb-32 mb-32 md:pt-20 md:pb-40 flex flex-col min-h-screen">
			
			{showHeader && <Header />}

			<div class="flex-grow">
				<slot />
			</div>
			<div class="mb-20">
				
			</div>
			<Footer />

		</main>

	</body>
</html>

<style is:global>
	html {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	::-webkit-scrollbar { width: 8px; }
	::-webkit-scrollbar-track { background: transparent; }
	::-webkit-scrollbar-thumb { background-color: #e4e4e7; border-radius: 20px; }
	.dark ::-webkit-scrollbar-thumb { background-color: #27272a; }
</style>